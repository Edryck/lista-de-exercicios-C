6. Conferir se a letra digitada é vogal ou consoante. 
    #include <stdio.h> 
    #include <stdlib.h> 
 
    int main() 
    { 
        char l; 
        printf("***Letra ser ou nao ser vogal***\n"); 
        printf("Digite a letra:\n"); 
        scanf("%c",&l); 
        switch (l){ 
            case 'a': 
            case 'A': 
            case 'e': 
            case 'E': 
            case 'i': 
            case 'I': 
            case 'o': 
            case 'O': 
            case 'u': 
            case 'U': 
                printf("Eh Vogal"); 
                break; 
            default: 
                printf("Eh uma consoante."); 
                break; 
        } 
        return 0; 
    } 
    ----------------------------------------------
7. Menor de Idade, Idoso ou adulto. 
    #include <stdio.h> 
    #include <stdlib.h> 
 
    int main() 
    { 
        int i; 
        printf("***Menor de idade, Adulto ou Idoso***\n"); 
        printf("Digite a sua idade:\n"); 
        scanf("%d",&i); 
        if (i<18){ 
            printf("Voce eh menor de idade"); 
        }else if ((i>=18)&&(i<=65)){ 
            printf("Voce eh adulto"); 
        }else{ 
            printf("Voce eh idoso"); 
        } 
        return 0; 
    }
