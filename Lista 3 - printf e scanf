4.Cálculo de juros composto 
#include <stdio.h> 
#include <stdlib.h> 
#include <math.h> 
//*Calculo de juros composto*// 
int main() { 
    int p;//parcelas, tempo 
    float c,m,vp;//capital, montante, valor de cada parcela 
    printf("Digite o valor que deseja emprestado: \n"); 
    scanf("%f",&c); 
    printf("Digite o numero de parcelas que para fazer o pagamento: \n"); 
    scanf("%d",&p); 
    m=c*pow((1+0.02),p); 
    vp=m/p; 
    printf("O valor total a ser pago sera de R$%.2f e o valor de cada parcela sera de 
    R$%.2f\n",m,vp); 
    return 0; 
} 
-----------------------------------------------------   
5. Cálculo de desconto 
#include <stdio.h> 
#include <stdlib.h> 
//*Calculo de desconto*// 
int main() { 
    float v,d,d1,vf; 
    printf("Digite o valor do produto:\n"); 
    scanf("%f",&v); 
    printf("Digite o valor do desconto:\n"); 
    canf("%f",&d1); 
    d=(d1/100)*v; 
    vf=v-d; 
    printf("O valor do desconto e R$%.2f e o valor final do produto e R$%.2f",d,vf); 
    return 0; 
}
