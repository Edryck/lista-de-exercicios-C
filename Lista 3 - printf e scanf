2. Cálculo de perímetro e área 
#include <stdio.h> 
#include <stdlib.h> 
//*Calculo de perimetro e area*// 
int main() { 
    float c,a,p,ar; 
    printf("Digite a altura:\n"); 
    scanf("%f",&a); 
    printf("Digite o comprimento:\n"); 
    scanf("%f",&c); 
    ar=(c*a); 
    p=(2*a)+(2*c); 
    printf("a area e: %.2f\n",ar); 
    printf("O perimetro e: %.2f",p); 
    return 0; 
} 
-----------------------------------------------------   
3. Produto com acréscimo de 65% 
#include <stdio.h> 
#include <stdlib.h> 
//*Produto com acréscimo de 65%*// 
int main() { 
    float pc,a; 
    char np[40]; 
    printf("Digite o nome do nome do produto:\n"); 
    fgets(np, 40,stdin); 
    printf("Digite o preco de custo do pruduto e:\n"); 
    scanf("%f", &pc); 
    a=pc*1.65; 
    printf("O nome do produto e %s e o preco e R$%.2f",np,a); 
    return 0;
}
