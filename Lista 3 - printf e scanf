6.Reajuste salarial 
#include <stdio.h> 
#include <stdlib.h> 
//*Reajuste salarial*// 
    int main() 
    { 
    float s,r,n,p,j; 
    printf("***Calcular o reajuste do salario***\n"); 
    printf("Digite seu salario:\nR$"); 
    scanf("%f",&s); 
    printf("Digite o percentual do reajuste:\n"); 
    scanf("%f",&p); 
    r=p/100; 
    n=s*r; 
    j=n+s; 
    printf("O valor do seu salario apos o reajuste sera de:\nR$%.2f",j); 
  
    return 0; 
    } 
    -----------------------------------------------------   
7.Conversao de dolar para real 
    #include <stdio.h> 
    #include <stdlib.h> 
    //*Dolar para Real*// 
    int main() 
    { 
       float d,r,c; 
       printf("*OBS.:Para valores quebrado subistitua a virgula por ponto\n"); 
       printf("Digite o valor (em dolar):\nUS$"); 
       scanf ("%f",&d); 
       printf("Informe a cotacao atual do dolar:\n"); 
       scanf("%f",&c); 
       r=c*d; 
       printf("Em Real corresponde a:\nR$%.2f",r); 
  
        return 0; 
    } 
    -----------------------------------------------------   
8. Reajuste de 2% na poupança 
    #include <stdio.h> 
    #include <stdlib.h> 
    //*Reajuste de  2% na poupanca*// 
    int main() 
    { 
       float p,v,t; 
       printf("Digite o valor atual da poupanca:\nR$"); 
       scanf("%f",&p); 
       v=p*0.02; 
       t=v+p; 
       printf("O valor da poupanca apos o um reajuste de dois porcento sera 
de:\nR$%.2f",t); 
  
       return 0; 
    }
    -----------------------------------------------------    
9. Quadrado de um número 
    #include <stdio.h> 
    #include <stdlib.h> 
    //*Quadrado de um numero*// 
    int main() 
    { 
       float n,t; 
       printf("Digite o numero que deseja elevar ao quadrado:\n"); 
       scanf("%f",&n); 
       t=n*n; 
       printf("O valor e: %.2f",t); 
  
       return 0; 
    } 
    -----------------------------------------------------   
10. ¼ de um numero 
    #include <stdio.h> 
    #include <stdlib.h> 
    //*¼ de um numero*// 
    int main() 
    { 
       float n,t; 
       printf("Digite o numero:\n"); 
       scanf("%f",&n); 
       t=n/4; 
       printf("O valor e: %.2f",t); 
  
       return 0; 
    } 
