1.Média 
#include <stdio.h> 
#include <stdlib.h> 
//*Média*// 
int main() 
{ 
    float a,b,c,m; 
    a=0;b=8;c=12; 
    m= (a+b+c)/3; 
    printf("a media dos numeros e: %f\n", m); 
    return 0; 
}
